% Пример оформления библиографии для ugost2003

% Книга
% Необходимые поля:
% - Название (title)
% - Автор(ы) (author, разделяются c помощью "and")
% - Город издательства (address)
% - Наименование издательства (publisher)
% - Год издания (year)
% - Общее кол-во страниц (numpages, опционально, либо везде ставить, либо нет)

% Пример оформления русской книги
@book{henrick2017ml,
  title      = {Машинное обучение},
  author     = {Хенрик, Б. and Джозеф, Р. and Марк, Ф.},
  publisher  = {Издательский дом Питер},
  address    = {Санкт"=Петербург},
  year       = {2017},
  language   = {russian}  
}

% Пример оформления английской книги
@book{human_earing,
  title     = {Auditory Neuroscience: Making sense of sound},
  author    = {Schnupp, Jan and Nelken, Israel--Junior and King, Andrew},
  publisher = {MIT press},
  address   = {New York},
  year      = {2011},
}

% Статья
% Необходимые поля:
% - Название статьи (title)
% - Автор(ы) (author, разделяются c помощью "and")
% - Название журнала (journal)
% - Идентификационные данные (хотя бы одно из):
%   - Том (volume)
%   - Номер (number)
%   - Выпуск
% - Год издания (year)
% - Страницы (диапазон в журнале) (pages)
%     Замеч.: страницы всегда оформляются интервалом даже если статья на одну страницу

% Пример оформления статьи на английском языке
@article{attention,
  title    = {Attention is all you need},
  author   = {Vaswani, Ashish and Shazeer, Noam and Parmar, Niki and Uszkoreit, Jakob and Jones, Llion and Gomez, Aidan N and Kaiser, {\L}ukasz and Polosukhin, Illia},
  journal  = {Advances in neural information processing systems},
  volume   = {30},
  number   = {2},
  pages    = {14--14},
  year     = {2017}
}

% Пример оформления статьи на русском языке
@article{classification_sound,
  title        = {Классификация музыкальных композиций по исполнителям на основе машинного обучения},
  author       = {Н. С. Лысенко and Т. А. Приходько},
  journal      = {Прикладная математика: современные проблемы математики, информатики и моделирования},
  volume       = {2},
  pages        = {121--227},
  year         = {2020},
  language     = {russian}
}

